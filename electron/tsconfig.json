{
    "compilerOptions": {
        "target": "ES6",
        "module": "Node16",
        "moduleResolution": "node",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "checkJs": false,
        "declaration": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "dist"]
}
